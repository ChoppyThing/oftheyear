# Example environment variables for /opt/oftheyear/.env
# Copy this to /opt/oftheyear/.env on the server and fill values (do NOT commit secret values).

POSTGRES_DB=oftheyear
POSTGRES_USER=oftheyear_user
POSTGRES_PASSWORD=supersecret
POSTGRES_DATA_DIR=/opt/oftheyear/postgres_data

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Frontend / backend runtime
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.oftheyear.eu
NEXT_PUBLIC_HOST=https://oftheyear.eu
FRONTEND_URL=https://oftheyear.eu

# JWT / app secrets
JWT_SECRET=replace-me
JWT_EXPIRES=1d

# reCAPTCHA keys (get from https://www.google.com/recaptcha/admin)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-site-key-here
RECAPTCHA_SECRET_KEY=your-secret-key-here

# Brevo email service (get from https://app.brevo.com/settings/keys/api)
BREVO_API_KEY=your-brevo-api-key-here
MAIL_FROM_NAME=OfTheYear
MAIL_FROM_ADDRESS=noreply@oftheyear.eu

# On-demand revalidation secret (generate a random string)
REVALIDATE_SECRET=your-random-secret-for-revalidation
